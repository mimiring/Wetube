mixin videoPlayer(video= {})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer_controls  
            .videoPlayer_column
                span#jsVolumeBtn
                    i.fas.fa-volume-up
                span  
                    | 00:00 / 10:00
            .videoPlayer_column
                span#jsPlayButton
                    i.fas.fa-play
            .videoPlayer_columnn
                span#jsFullScreen
                    i.fas.fa-expand



    