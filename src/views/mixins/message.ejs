<%if(messages.error){%>
    <div class="flash-message__container error">
        <span class="flash-message__text"><%=message.error%></span>
    </div>
<%} else if (messages.info){%>
    <div class="flash-message__container info">
        <span class="flash-message__text"><%=message.info%></span>
    </div>
<%} else if(messages.success){%>
    <div class="flash-message__container success">
        <span class="flash-message__text"><%=message.success%></span>
    </div>
<%}%>